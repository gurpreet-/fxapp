<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/currency_exchange_fragment"
    android:id="@+id/global_nav_graph">

    <include app:graph="@navigation/transfer_nav_graph" />

    <fragment
        android:id="@+id/currency_exchange_fragment"
        android:name="com.fxapp.view.fragment.HomeScreenFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_global_open_transfer_hub"
            app:destination="@id/transfer_nav_graph">
            <argument android:name="currency" app:argType="string" />
        </action>

    </fragment>



</navigation>